{
  "extends": ["plugin:import/recommended"],

  "plugins": ["import"],

  "import/resolver": {
    "node": {
      "paths": ["src"],
      "extensions": [".js", ".ts", ".d.ts", ".tsx"]
    }
  },

  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": ["./*", "../*"]
      }
    ],

    "import/order": "off",
    "import/first": "error",
    "import/newline-after-import": "error",
    "import/no-anonymous-default-export": "error",
    "import/prefer-default-export": "error"
  }
}
